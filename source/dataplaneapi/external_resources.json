{
  "Parameters": {
    "DataplaneTableName": {
      "Type": "String",
      "Description": "Table used for storing asset metadata"
    },
    "DataplaneBucketName": {
      "Type": "String",
      "Description": "Bucket used to store asset media"
    },
    "UserPoolArn": {
      "Type": "String",
      "Description": "Arn of the Mie Cognito user pool"
    },
    "DeploymentPackageBucket": {
      "Type": "String",
      "Description": "Bucket that contains the dataplane deployment package"
    },
    "DeploymentPackageKey": {
      "Type": "String",
      "Description": "S3 Key of the dataplane deployment package"
    }
  },
  "Resources": {
    "ApiHandlerRole": {
      "Metadata": {
        "cfn_nag": {
          "rules_to_suppress": [
            {
              "id": "W11",
              "reason": "TODO: IAM role should not allow * resource on its permissions policy"
            },
            {
              "id": "F3",
              "reason": "TODO: IAM role should not allow * resource on its permissions policy"
            }
          ]
        }
      },
      "Properties": {
        "Policies": [
          {
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:*"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": "dynamodb:*",
                  "Resource": {"Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/${DataplaneTableName}"}
                },
                {
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "*",
                  "Effect": "Allow",
                  "Sid": "Logging"
                }
              ]
            },
            "PolicyName": "MieDataplaneApiHandlerRolePolicy"
          }
        ]
      }
    },
    "APIHandler": {
      "Properties": {
        "Environment": {
          "Variables": {
            "DATAPLANE_TABLE_NAME": {
                "Ref": "DataplaneTableName"
            },
            "DATAPLANE_BUCKET": {
                "Ref": "DataplaneBucketName"
            },
            "USER_POOL_ARN": {
                "Ref": "UserPoolArn"
            }
          }
        },
        "CodeUri": {"Bucket":  {"Ref": "DeploymentPackageBucket"}, "Key":  {"Ref": "DeploymentPackageKey"}}
      }
    },
    "RestAPI": {
      "Metadata": {
        "cfn_nag": {
          "rules_to_suppress": [
            {
              "id": "W45",
              "reason": "TODO: ApiGateway should have access logging configured"
            }
          ]
        }
      },
      "Properties": {
        "DefinitionBody": {
          "securityDefinitions": {
            "MieUserPool": {
              "x-amazon-apigateway-authorizer": {
              "providerARNs": [{"Ref":  "UserPoolArn"}]
            }
          }
        }
        }
      }
    }
  }
}